<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">#757575</item>
    </style>

    <!-- Material design themed style -->
    <style name="MaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">#ff5722</item>
        <item name="android:colorPrimaryDark">#d84315</item>
        <item name="android:colorAccent">#ffccbc</item>
        <item name="android:textColorPrimary">#1a237e</item>
        <item name="android:textColorSecondary">#3f51b5</item>
    </style>

</resources>
